{
  "name": "@mosip/inji-vc-renderer",
  "version": "0.1.0",
  "repository": "https://github.com/mosip/inji-vc-renderer",
  "author": "MOSIP",
  "license": "MPL-2.0",
  "description": "JS library to render VC with SVG template support",
  "main": "lib/commonjs/vcrenderer",
  "module": "lib/module/vcrenderer",
  "scripts": {
    "build": "bob build",
    "clean": "rm -rf lib",
    "test": "jest --coverage",
    "verify": "npm run test && bob build",
    "example": "npm run build && node example/example-app.js"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "react-native-builder-bob": "^0.20.0",
    "ts-jest": "^29.2.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@mosip/pixelpass": "^0.5.0",
    "expect": "^29.7.0",
    "node-fetch": "^3.3.2"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json",
          "tsc": "./node_modules/.bin/tsc"
        }
      ]
    ]
  }
}
